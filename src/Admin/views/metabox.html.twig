<div>
    {{ project.title }}
    <form>
        {{ wp_nonce_field }}
        <p>Price</p>
        <input type="text" name="sj_project_price" value="{{ project.price ? project.price : 0 }}"/>
        <p>
            <input type="checkbox" name="sj_project_can_donate_more" {{ project.canDonateMore or not project.id ? 'checked' : '' }} />
            can donate more
        </p>
        <p>
            <input type="checkbox" name="sj_project_is_public" {{ project.isPublic or not project.id ? 'checked' : '' }} />
            public project
        </p>
        <p>Due date</p>
        <input type="text" id="datepicker" name="sj_project_due_date" value="{{ project.dueDate|date('Y-m-d') }}"/>
        <input type="text" id="timepicker" name="sj_project_due_time" value="{{ project.dueDate|date('H:i') }}"/>
        {% if isModerator and projectTypes|length %}
            <div>
                <p>Contract type</p>
                <select name="sj_project_contract_type">
                    {% for value in projectTypes %}
                        <option value={{value.id }}>{{ value.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <p>Beneficent</p>
                <select name="sj_project_beneficent_account">
                    {% for value in crowdsaleAccounts %}
                        <option value={{value.address }}>{{ value.fullName }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endif %}
    </form>
</div>